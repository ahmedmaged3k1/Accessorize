<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.features.masksTryOn.MasksTryOnFragment">

    <fragment android:name="com.example.araccessories.ui.core.arSession.FaceArFragment"
        android:id="@+id/face_fragment_masks"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/captureImageMasks"
        android:layout_width="105dp"
        android:layout_height="88dp"
        android:background="@drawable/flag_transparent"

        android:contentDescription="@string/capture_photo"
        android:scaleX="1.5"

        android:scaleY="1.5"
        android:src="@drawable/insta3"

        app:layout_constraintBottom_toBottomOf="@+id/face_fragment_masks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/face_fragment_masks"
        app:layout_constraintVertical_bias="0.942">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>