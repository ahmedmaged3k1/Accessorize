<resources >
    <!-- Base application theme. -->
    <style name="Theme.ArAccessories" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/Grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ArAccessories.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="titles">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/circular_std</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="productTitles">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_regulat</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="buttons">
        <item name="paddingStart">40dp</item>
        <item name="paddingEnd">40dp</item>
        <item name="android:textColor">@color/white</item>

        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="descriptions">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Grey</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="welcome">
        <item name="fontFamily">@font/inter_regulat</item>
        <item name="android:textSize">12sp</item>
        <item name="fontWeight">700</item>
        <item name="color">@color/black</item>
    </style>
    <style name="adText">
        <item name="fontFamily">@font/inter_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">700</item>

    </style>
    <style name="categoryText">
        <item name="fontFamily">@font/inter_black</item>

    </style>
    <style name="onBoardTitle">
        <item name="fontFamily">@font/inter_black</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Theme.ArAccessories.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ArAccessories.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>